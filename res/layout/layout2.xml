<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/WaitingHeader"
            android:id="@+id/textView" android:textSize="@dimen/LayoutHeaderTextSize"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:weightSum="1">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="There is no previous work item estimation result."
                android:id="@+id/textView4" android:layout_gravity="center_horizontal"
                android:textSize="@dimen/ContentTextSize"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/LayoutHeaderTextSize"
                android:layout_gravity="center_horizontal" android:layout_weight="2.22"/>
    </LinearLayout>
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarWaitForWorkItem" android:layout_gravity="center_horizontal" android:indeterminate="false"/>
</LinearLayout>